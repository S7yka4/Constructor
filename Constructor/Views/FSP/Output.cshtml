@using Constructor.Storage.Models;

@model List<FSP>;
    <body>
        <h2>ID сборки</h2>
        <h1>@ViewData["id"]</h1>
        
        @foreach (var tmp in Model)
        {
            <label>Id   </label>@tmp.Id
            <br />
            <label>Название   </label>@tmp.Name
            <br />
            <label>Ссылка  </label>@tmp.Img
            <br />
            <label>Количество   </label>@tmp.Count
            <br />
            <label>Цена   </label>@tmp.Cost
            <br />
            <label>Формафактор   </label>@tmp.FormFactor
            <br />
            <label>Мощность   </label>@tmp.Output
            <br />
            @using (Html.BeginForm("EditAssembly", "FSP", FormMethod.Post))
            {

                <input type="hidden" name="FSPId" value="@tmp.Id">
                <input type="submit" value="Добавить в сборку">
            }
            <br /><br /><br />
        }
    </body>

