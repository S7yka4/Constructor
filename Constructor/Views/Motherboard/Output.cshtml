@using Constructor.Storage.Models;

@model List<Motherboard>;
<body>
    <h2>ID сборки</h2>
    <h1>@ViewData["id"]</h1>
    
    @foreach (var tmp in Model)
    {
        <label>Id   </label>@tmp.Id
        <br />
        <label>Название   </label>@tmp.Name
        <br />
        <label>Ссылка   </label>@tmp.Img
        <br />
        <label>Количество   </label>@tmp.Name
        <br />
        <label>Цена   </label>@tmp.Cost
        <br />
        <label> Сокет   </label>@tmp.Socket
        <br />
        <label>Чипсет   </label>@tmp.Chipset
        <br />
        <label>Тип памяти   </label>@tmp.MemoryType
        <br />
        <label>ЕСС   </label>@tmp.ECC
        <br />
        <label>Количество слотов для ОЗУ  </label>@tmp.RAMCount
        <br />
        <label>Количество слотов для Вентиляторов  </label>@tmp.FANCount
        <br />
        <label>Количество слотов для Жестких дисков </label>@tmp.DriveCount
        <br />
        <label>Формафактор   </label>@tmp.FormFactor
        <br />
        @using (Html.BeginForm("EditAssembly", "Motherboard", FormMethod.Post))
        {

            <input type="hidden" name="MotherboardId" value="@tmp.Id">
            <input type="submit" value="Добавить в сборку">
        }
        <br /><br /><br />
    }
</body>

