@using Constructor.Storage.Models;

@model List<Case>;
<body>
    <h2>ID сборки</h2>
    <h1>@ViewData["id"]</h1>
    
    @foreach (var tmp in Model)
    {
        <label>Id   </label>@tmp.Id
        <br />
        <label>Название   </label>@tmp.Name
        <br />
        <label>Ссылка   </label>@tmp.Img
        <br />
        <label>Количество   </label>@tmp.Count
        <br />
        <label>Цена   </label>@tmp.Cost
        <br />
        <label>Формафактор   </label>@tmp.FormFactor
        <br />
        <label>Количество вентиляторов 140мм   </label>@tmp.Fan140Count
        <br />
        <label>Количество вентиляторов 120мм   </label>@tmp.Fan120Count
        <br />
        <label>Количество вентиляторов 90мм   </label>@tmp.Fan90Count
        <br />
        <label>Количество жестких дисков 2.5 </label>@tmp.Drive25Count
        <br />
        <label>Количество жестких дисков 3.5 </label>@tmp.Drive35Count
        <br />
        @using (Html.BeginForm("EditAssembly", "Case", FormMethod.Post))
        {

            <input type="hidden" name="CaseId" value="@tmp.Id">
            <input type="submit" value="Добавить в сборку">
        }
        <br /><br /><br />
    }
</body>

