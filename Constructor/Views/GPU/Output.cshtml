@using Constructor.Storage.Models;

@model List<GPU>;
    <body>
        <h2>ID сборки</h2>
        <h1>@ViewData["id"]</h1>

        @foreach (var tmp in Model)
        {
            <label>Id   </label>@tmp.Id
            <br />
            <label>Название   </label>@tmp.Name
            <br />
            <label>Ссылка   </label>@tmp.Img
            <br />
            <label>Количество   </label>@tmp.Name
            <br />
            <label>Цена   </label>@tmp.Cost
            <br />
            <label>Частота   </label>@tmp.Clock
            <br />
            <label>Объем памяти   </label>@tmp.MemorySize
            <br />
            <label>TDP   </label>@tmp.TDP
            <br />
            <label>Рекаомендованная мощность БП   </label>@tmp.RecommendFSPPower
            <br />
            @using (Html.BeginForm("EditAssembly", "GPU", FormMethod.Post))
            {

                <input type="hidden" name="GPUId" value="@tmp.Id">
                <input type="submit" value="Добавить в сборку">
            }
            <br /><br /><br />
        }
    </body>

