@using Constructor.Storage.Containers;
@model AssemblyContainer;

<head>
    <h1>@Model.Id</h1>
</head>
<body>
    @if (Model.Case != null)
    {
        <label font-size="30px">Корпус</label><br />
        <label>Id - @Model.Case.Id</label><br />
        <label>Название - @Model.Case.Name</label><br />
        <label>Цена - @Model.Case.Cost</label><br />
        @using (Html.BeginForm("Output", "Case", FormMethod.Get))
        {

            <input type="hidden" name="_Container" value="@Model.Id">
            <input type="submit" value="Поменять корпус">
        }
    }
    else
    {
        @using (Html.BeginForm("Output", "Case", FormMethod.Get))
        {

            <input type="hidden" name="_Container" value="@Model.Id">
            <input type="submit" value="Добавить корпус">
        }
    }
