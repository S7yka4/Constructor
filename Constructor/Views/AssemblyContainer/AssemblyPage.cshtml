        {
            <label>Id - @tmp.Id</label><br />
            <label>Название - @tmp.Name</label><br />
            <label>Цена - @tmp.Cost</label><br />
            @using (Html.BeginForm("ChangeDriveInPair", "Pair", FormMethod.Get))
            {

                <input type="hidden" name="AssemblyId" value="@Model.Id">
                <input type="hidden" name="DriveId" value="@tmp.Id">
                <input type="submit" value="Поменять жесткий диск">
            }
            @using (Html.BeginForm("DeleteDrivePair", "Pair", FormMethod.Post))
            {

                <input type="hidden" name="AssemblyId" value="@Model.Id">
                <input type="hidden" name="DriveId" value="@tmp.Id">
                <input type="submit" value="Удалить жесткий диск">
            }
            <br /><br /><br />
        }
        @using (Html.BeginForm("Output", "Drive", FormMethod.Get))
        {

            <input type="hidden" name="Id" value="@Model.Id">
            <input type="submit" value="Добавить жесткий диск">
