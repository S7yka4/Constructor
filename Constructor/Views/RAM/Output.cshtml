@using Constructor.Storage.Containers;

@model RAMAndAssemblyContainer;
<body>
    <h2>ID сборки</h2>
    <h1>@ViewData["id"]</h1>
    
    @foreach (var tmp in Model.RAMs)
    {
        <label>Id   </label>@tmp.Id
        <br />
        <label>Название   </label>@tmp.Name
        <br />
        <label>Ссылка   </label>@tmp.Img
        <br />
        <label>Количество   </label>@tmp.Name
        <br />
        <label>Цена   </label>@tmp.Cost
        <br />
        <label>Объём   </label>@tmp.MemorySize
        <br />
        <label>Тип   </label>@tmp.MemoryType
        <br />
        <label>ЕСС   </label>@tmp.ECC
        <br />
        @using (Html.BeginForm("EditRAMInAssembly", "Pair", FormMethod.Post))
        {
            <input type="hidden" name="AssemblyId" value="@Model.AssemblyId">
            <input type="hidden" name="RAMId" value="@tmp.Id">
            <input type="submit" value="Добавить в сборку">
        }
        <br /><br /><br />
    }
    @using (Html.BeginForm("TakeAssembly", "Assembly", FormMethod.Get))
    {
        <input type="hidden" name="Id" value="@Model.AssemblyId">
        <input type="submit" value="Завершить добавление">
    }
</body>

